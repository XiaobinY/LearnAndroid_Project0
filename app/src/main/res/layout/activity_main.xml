<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/AppButtonStyle"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifyBtn"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        />

    <Button
        style="@style/AppButtonStyle"
        android:text="SCORE APPS"
        android:id="@+id/scoreBtn"
        android:layout_below="@id/spotifyBtn" />

    <Button
        style="@style/AppButtonStyle"
        android:text="LIBRARY APP"
        android:id="@+id/libraryByn"
        android:layout_below="@id/scoreBtn" />

    <Button
        style="@style/AppButtonStyle"
        android:text="BUILD IT BIGGER"
        android:id="@+id/biggerBtn"
        android:layout_below="@id/libraryByn" />

    <Button
        style="@style/AppButtonStyle"
        android:text="XYZ READER"
        android:id="@+id/xyzBtn"
        android:layout_below="@id/biggerBtn" />

    <Button
        style="@style/AppButtonStyle"
        android:text="CAP STONEï¼š MY OWN APP"
        android:id="@+id/capStoneBtn"
        android:layout_below="@id/xyzBtn"
        android:background="#F44336"
        android:textColor="@android:color/white"/>

</RelativeLayout>
